<section class="new-post-section">
    <button type="submit" class="btn" id="create-new-post">+ Create new post</button>
</section>

<section class="post-section row align-items-start ">
    <h2>Your Dashboard</h2>
    {{#if posts.length}}
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link btn btn-primary" role="button">edit post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/js/create-post.js"></script>
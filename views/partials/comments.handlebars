<div class="comments container p-3 text-info-emphasis bg-info-subtle border border-info-subtle rounded-3">
    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>